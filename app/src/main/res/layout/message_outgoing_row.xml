<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">


    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_color="@android:color/holo_blue_dark"
        app:civ_border_width="4dp"
        android:id="@+id/image_to"
        android:layout_width="68dp"
        android:layout_height="59dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/sym_action_chat" />

    <TextView
        android:id="@+id/message_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_edittext"
        android:maxWidth="252dp"
        android:padding="16dp"
        android:text="lalalala ddddddddddddddd ddddddddddqzdqzd zqd zqd"
        app:layout_constraintEnd_toStartOf="@+id/image_to"
        app:layout_constraintTop_toTopOf="@+id/image_to" />


</androidx.constraintlayout.widget.ConstraintLayout>