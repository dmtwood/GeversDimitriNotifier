<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="12dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginVertical="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_in_notify_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First line name"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_in_notify_list_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:rotation="0"
            android:src="@drawable/image_style"
            android:translationZ="100dp"
            app:civ_border_width="4dp"
            app:civ_border_color="@android:color/holo_blue_dark"
            app:layout_constraintBottom_toBottomOf="@+id/parent"
            app:layout_constraintEnd_toEndOf="@+id/user_in_notify_list_name"
            app:layout_constraintStart_toStartOf="@+id/user_in_notify_list_name"
            app:layout_constraintTop_toBottomOf="@+id/user_in_notify_list_name"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>